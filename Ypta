    <script>
        const SENHA = "sem limites";
        let c = 0;

        function entrar() {
            if(document.getElementById("senha").value.toLowerCase() === SENHA) {
                document.getElementById("login").style.display = "none";
                document.getElementById("site").style.display = "block";
                setInterval(() => { c += 66; document.getElementById("chifre-count").innerText = c.toLocaleString(); }, 100);
            }
        }

        function triggerJumpscare() {
            document.getElementById("jumpscare").style.display = "flex";
            document.getElementById("grito").play();
            setTimeout(() => { document.getElementById("jumpscare").style.display = "none"; }, 1300);
        }

        function tocarBoi() { document.getElementById("som-boi").loop = true; document.getElementById("som-boi").play(); }
        function pararBoi() { document.getElementById("som-boi").pause(); }

        const ofensas = [
            "O Ângelo foi mentir e o nariz dele quebrou a barreira do som.",
            "O Sidão não precisa de rádio, ele capta o sinal nos chifres.",
            "Matheus tentou algo com a Alyce e recebeu um miau do Sidão.",
            "Daniel foi usar o ventilador e parou no outro bairro.",
            "Ian sumiu, mas o nariz do Ângelo ainda está bloqueando a visão da rua.",
            "O Mayck riu e o Daniel quase foi levado pela ventania.",
            "O nariz do Ângelo tem o seu próprio CEP.",
            "Matheus mandou mensagem pra Alyce e quem visualizou foi o Sidão.",
            "Daniel foi se pesar e a balança marcou 'por favor, suba na balança'.",
            "O Mayck começou a rir da magreza do Daniel e o Chaves apareceu.",
            "Sidão comprou um boné, mas teve que fazer dois furos extras.",
            "O nariz do Ângelo é a maior construção civil do grupo."
        ];

        function gerarZoeira() {
            document.getElementById("texto-infinito").innerHTML = `<span style="color:red">></span> ${ofensas[Math.floor(Math.random()*ofensas.length)]}`;
            document.getElementById("risada").play();
        }

        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        let p = Array(120).fill().map(() => ({x: Math.random()*canvas.width, y: Math.random()*canvas.height, v: Math.random()*1.5 + 0.5}));
        function anim() { 
            ctx.clearRect(0,0,canvas.width, canvas.height); 
            ctx.fillStyle = 'rgba(255,0,0,0.15)'; 
            p.forEach(i => { ctx.beginPath(); ctx.arc(i.x, i.y, 1.2, 0, 7); ctx.fill(); i.y += i.v; if(i.y > canvas.height) i.y = 0; }); 
            requestAnimationFrame(anim); 
        }
        anim();
    </script>
