    <script>
        const SENHA_CORRETA = "sem limites";
        let chifres = 0;

        function entrar() {
            if(document.getElementById("senha").value.toLowerCase() === SENHA_CORRETA) {
                document.getElementById("login").style.display = "none";
                document.getElementById("site").style.display = "block";
                document.body.style.display = "block";
                iniciarContagem();
            } else {
                document.getElementById("erro").innerText = "Token inv√°lido.";
            }
        }

        function iniciarContagem() {
            setInterval(() => {
                chifres += 3;
                document.getElementById("chifre-count").innerText = chifres.toLocaleString();
            }, 1000);
        }

        function muuuInfinito() {
            const audio = document.getElementById("som-boi");
            audio.loop = true;
            audio.play();
            document.getElementById("img-sidao").style.animation = "pulse 0.5s infinite";
        }

        function pararTudo() {
            const audio = document.getElementById("som-boi");
            audio.pause();
            document.getElementById("img-sidao").style.animation = "none";
        }

        function postarOfensa() {
            const txt = document.getElementById("texto-ofensa").value;
            if(!txt) return;
            const item = document.createElement("div");
            item.className = "ofensa-item";
            item.innerHTML = `<b>@User:</b> ${txt}`;
            document.getElementById("lista-ofensas").prepend(item);
            document.getElementById("texto-ofensa").value = "";
            document.getElementById("risada").play();
        }

        const frases = [
            "Sid√£o comprou uma TV de 70 polegadas pra ver o reflexo dos galhos.",
            "√Çngelo acaba de ganhar o pr√™mio de erro mais confiante do ano.",
            "Maycon √© o √∫nico que se salva nesse grupo de animais.",
            "Matheus est√° h√° 48 horas esperando uma resposta no Tinder."
        ];

        function humilhar() {
            document.getElementById("texto-humilha").innerText = frases[Math.floor(Math.random()*frases.length)];
            document.getElementById("risada").play();
        }

        function tocarSom(id) { document.getElementById(id).play(); }
    </script>
