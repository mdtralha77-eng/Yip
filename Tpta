    <script>
        const SENHA = "sem limites";
        let c = 0;

        function entrar() {
            if(document.getElementById("senha").value.toLowerCase() === SENHA) {
                document.getElementById("login").style.display = "none";
                document.getElementById("site").style.display = "block";
                setInterval(() => { c += 666; document.getElementById("chifre-count").innerText = c.toLocaleString(); }, 100);
            }
        }

        function triggerJumpscare() {
            document.getElementById("jumpscare").style.display = "flex";
            document.getElementById("grito").play();
            setTimeout(() => { document.getElementById("jumpscare").style.display = "none"; }, 1500);
        }

        function tocarBoi() { const b = document.getElementById("som-boi"); b.loop = true; b.play(); }
        function pararBoi() { document.getElementById("som-boi").pause(); }

        const sujeitos = ["O Sidão", "O Ian", "O Ângelo", "O Matheus", "O Mayck", "O Daniel", "O Maycon"];
        const verbos = ["foi visto", "tentou", "acaba de", "foi pego", "sonhou que"];
        const acoes = [
            "polindo os chifres no asfalto", 
            "dando em cima da própria sombra", 
            "sumindo de um jantar sozinho", 
            "comprando curso de como ser menos otário", 
            "discutindo com uma parede e perdendo",
            "pedindo permissão pro Sidão para passar na porta",
            "baixando Tinder no micro-ondas"
        ];
        const finais = ["e passou vergonha.", "e o diabo pediu autógrafo.", "e a NASA está estudando o caso.", "com 100% de confiança.", "e ninguém ficou surpreso."];

        function gerarZoeira() {
            const frase = `> ${sujeitos[Math.floor(Math.random()*sujeitos.length)]} ${verbos[Math.floor(Math.random()*verbos.length)]} ${acoes[Math.floor(Math.random()*acoes.length)]} ${finais[Math.floor(Math.random()*finais.length)]}`;
            document.getElementById("texto-infinito").innerText = frase;
            document.getElementById("risada").play();
        }

        // Fundo de partículas
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        let particles = [];
        class Particle {
            constructor() { this.x = Math.random()*canvas.width; this.y = Math.random()*canvas.height; this.v = Math.random()*2; }
            draw() { ctx.fillStyle = 'rgba(255,0,0,0.1)'; ctx.beginPath(); ctx.arc(this.x, this.y, 1, 0, Math.PI*2); ctx.fill(); }
            update() { this.y += this.v; if(this.y > canvas.height) this.y = 0; }
        }
        for(let i=0; i<100; i++) particles.push(new Particle());
        function anim() { ctx.clearRect(0,0,canvas.width, canvas.height); particles.forEach(p => {p.draw(); p.update();}); requestAnimationFrame(anim); }
        anim();
    </script>
